#include <iostream>

using namespace std;

int main() {
    double distance_AB, distance_BC, cargo_weight;
    cout << "Введіть відстань між пунктами А і В (км): ";
    cin >> distance_AB;
    cout << "Введіть відстань між пунктами В і С (км): ";
    cin >> distance_BC;
    cout << "Введіть вагу вантажу (кг): ";
    cin >> cargo_weight;

    double fuel_consumption;
    if (cargo_weight <= 500) {
        fuel_consumption = 1;
    } else if (cargo_weight <= 1000) {
        fuel_consumption = 4;
    } else if (cargo_weight <= 1500) {
        fuel_consumption = 7;
    } else if (cargo_weight <= 2000) {
        fuel_consumption = 9;
    } else {
        cout << "Літак не може підняти такий великий вантаж." << endl;
        return 1;
    }

    double total_fuel_needed = (distance_AB + distance_BC) * fuel_consumption;
    double fuel_needed_at_B = total_fuel_needed - 300;

    if (fuel_needed_at_B <= 0) {
        cout << "Потрібно дозаправити " << 0 << " л палива в пункті В." << endl;
    } else {
        cout << "Потрібно дозаправити " << fuel_needed_at_B << " л палива в пункті В." << endl;
    }

    return 0;
}
