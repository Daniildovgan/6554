#include <iostream>

using namespace std;

int main() {
    int number;
    cout << "Введіть чотиризначне число: ";
    cin >> number;

    if (number < 1000 || number > 9999) {
        cout << "Помилка" << endl;
        return 1;
    }

    int digit1 = number / 1000 % 10;
    int digit2 = number / 100 % 10;
    int digit3 = number / 10 % 10;
    int digit4 = number % 10;

    int new_number = digit2 * 1000 + digit1 * 100 + digit4 * 10 + digit3;

    cout << "Число після обміну: " << new_number << endl;

    return 0;
}
